<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    tools:context=".tela_pedidos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEDIDOS"
            android:textAlignment="center"
            android:textColor="#D32F2F"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

        <CheckBox
            android:id="@+id/cpizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/rgtamanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tamanho"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <RadioButton
                android:id="@+id/rdpequeno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pequena"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rdmedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Média"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rdgrande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grande"
                android:textColor="#000000" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sabores"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <Spinner
            android:id="@+id/spsabores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:entries="@array/sabores" />

        <CheckBox
            android:id="@+id/crefri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bebida"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spmarcas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bebidas"
            android:padding="8dp" />

        <RadioGroup
            android:id="@+id/rgtele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <RadioButton
                android:id="@+id/rdbusca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrega Local"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rdtele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tele Entrega"
                android:textColor="#000000" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endereço para entrega"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edtend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="Digite seu endereço"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F00000"
        android:textColor="#FFFFFF"
        android:text="Realizar pedido"
        android:padding="12dp"
        android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F00000"
            android:textColor="#FFFFFF"
            android:text="Retornar"
            android:padding="12dp"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
